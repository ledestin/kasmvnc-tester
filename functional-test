#!/bin/bash

set -eo pipefail
set -x

cleanup() {
  [ -n "$container_id" ] && docker container stop "$container_id"
}

trap cleanup EXIT

image=kasmweb/ubuntu-jammy-desktop:develop
container_id=$(docker run --detach --rm  -it --shm-size=512m -p 6901:6901 -e VNC_PW=password "$image")
sleep 5
./test-and-render-report.sh
